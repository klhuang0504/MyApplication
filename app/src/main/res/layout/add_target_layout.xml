<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/semi_transparent_background"
    android:orientation="vertical"
    android:id="@+id/add_target_layout"
    android:visibility="invisible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名稱"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:nextFocusDown="@+id/pointEt" />

        <EditText
            android:id="@+id/targetNameEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="可輸入想養成或戒掉的習慣 ex:跑步、看書、賴床、消夜....."
            android:imeOptions="actionNext"
            android:inputType="text"
            android:singleLine="true"
            android:focusable="true" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:weightSum="1">

        <TextView
            android:id="@+id/pointTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="點數"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/pointEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:numeric="integer"
            android:imeOptions="actionDone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addGoodTargetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增好習慣" />
        <!--android:layout_centerHorizontal="true"-->

        <!--android:onClick="addGoodTarget"-->


        <Button
            android:id="@+id/addBadTargetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增壞習慣" />
        <!--android:layout_alignBottom="@+id/addGoodTargetButton"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_alignParentRight="true"-->

        <!--android:onClick="addBadTarget"-->


        <Button
            android:id="@+id/addRewardButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增獎勵" />
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignTop="@+id/button3"-->
        <!--android:onClick="addReward"-->


    </LinearLayout>

</LinearLayout>
