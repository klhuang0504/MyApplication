<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TargetActionDialog" parent="android:Theme.Dialog">
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyTheme" parent="android:Theme">
        <item name="android:textViewStyle">@style/MyTextViewStyle</item>
        <item name="android:background">@color/whitewhite</item>

    </style>

    <style name="MyTextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/blackblack</item>
    </style>

    <!-- Light Themes-->

    <!-- Mocked Account -->
    <style name="MockedAccountLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item><!-- Remove the change account button -->
    </style>

    <!-- Accounts -->
    <style name="AccountsLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Drawer Header Image -->
    <style name="ImageHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>

    <!-- No Drawer Header -->
    <style name="NoHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

    <!-- Custom Drawer Header -->
    <style name="CustomHeaderLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <!-- Dark Themes-->

    <!-- Mocked Account -->
    <style name="MockedAccountDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item><!-- Remove the change account button -->
    </style>

    <!-- Accounts -->
    <style name="AccountsDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Drawer Header Image -->
    <style name="ImageHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>

    <!-- No Drawer Header -->
    <style name="NoHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

    <!-- Custom Drawer Header -->
    <style name="CustomHeaderDark" parent="MaterialNavigationDrawerTheme">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_CUSTOM</item>
    </style>

    <!-- Functionality Themes-->
    <!-- I used DRAWERTYPE_NO_HEADER only for get a simple tutorial, you can use any type of drawer obviously -->

    <!-- Unique Toolbar Color -->
    <style name="UniqueToolbarColor" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="uniqueToolbarColor">true</item>
    </style>

    <!-- Ripple Backport support -->
    <style name="RippleBackport" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="rippleBackport">true</item>
    </style>

    <!-- Multipane Support for tablets -->
    <style name="MultiPane" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="multipaneSupport">true</item>
    </style>

    <!-- custom section under account list -->
    <style name="CustomAccountSection" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Kitkat Traslucent Status bar -->
    <style name="KitkatStatusBar" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar.TranslucentKitKatStatusBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <!-- Master / Child Example -->
    <style name="MasterChild" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_IMAGE</item>
    </style>

    <!-- Real Color Sections -->
    <style name="RealColorSections" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

    <!-- Default Section Loaded -->
    <style name="DefaultSectionLoaded" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="defaultSectionLoaded">3</item>
    </style>

    <!-- Default Section Loaded -->
    <style name="ActionBarShadow" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="toolbarElevation">true</item>
    </style>

    <!-- Learning Pattern Disabled -->
    <style name="LearningPatternDisabled" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
        <item name="learningPattern">false</item>
    </style>

    <!-- Back Pattern -->
    <style name="BackPattern" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar" >
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="drawerType">@integer/DRAWERTYPE_NO_HEADER</item>
    </style>

    <!-- Test Theme -->
    <style name="TestTheme" parent="MaterialNavigationDrawerTheme.Light">
        <item name="colorPrimary">#8bc34a</item>
        <item name="colorPrimaryDark">#558b2f</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="multipaneSupport">true</item>
    </style>

</resources>
